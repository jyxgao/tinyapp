<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav mr-auto">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      <% if (username !== undefined) { %>
          <span class="navbar-text">Logged In As: <%= username %> </span>
          <form class="form-inline" style="margin-right: 5em" method="POST" action="/logout">
            <button type="submit" class="btn btn-sm btn-primary" style="margin: 0.4em">Log Out</button>
          </form>
    <% } else { %>
      <form class="form-inline my-2 my-lg-0" style="margin-right: 5em" method="POST" action="/login">
        <input type="text" name="username" placeholder="Username" style="width: 150px; margin: 0.4em"> 
        <button type="submit" class="btn btn-sm btn-primary">Log In</button>
      </form>
    <% } %>
    </div>
  </nav>
</header>